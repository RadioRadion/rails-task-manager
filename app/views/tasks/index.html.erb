<h1>Tasks List</h1>
<ul>
  <% @tasks.each do |task| %>
    <%= link_to task_path( task['id'] ) do %>
      <li>
        <%=  task['title']  %> : <b><%= task['completed'] == true ? '[x]' : '[ ]' %></b>
<!--         <input id="toggle" type="checkbox"> -->
      </li>
    <% end %>
  <% end %>
</ul>

<%= link_to "add a new task", new_task_path %>
